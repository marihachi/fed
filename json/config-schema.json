{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "components": {
            "type": "array",
            "items": {
              "oneOf": [
                { "type": "string", "pattern": "https?://.+" },
                {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string", "minLength": 1 },
                    "objects": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string", "minLength": 1 },
                          "props": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "name": { "type": "string", "minLength": 1 },
                                "type": { "enum": ["string"] }
                              }
                            }
                          }
                        },
                        "required": ["name"]
                      }
                    },
                    "actions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string", "minLength": 1 }
                        },
                        "required": ["name"]
                      }
                    },
                    "events": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string", "minLength": 1 }
                        },
                        "required": ["name"]
                      }
                    }
                  },
                  "required": ["name"]
                }
              ]
            }
          }
        },
        "required": ["name"]
      }
    }
  }
}
