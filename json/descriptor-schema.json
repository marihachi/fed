{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "services": {
      "type": "array",
      "items": { "$ref": "#/definitions/service" }
    },
    "$schema": true
  },
  "required": [],
  "additionalProperties": false,

  "definitions": {
    "service": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "components": {
          "type": "array",
          "items": { "$ref": "#/definitions/component" }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "component": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "objects": {
          "type": "array",
          "items": { "$ref": "#/definitions/componentObject" }
        },
        "actions": {
          "type": "array",
          "items": { "$ref": "#/definitions/componentAction" }
        },
        "events": {
          "type": "array",
          "items": { "$ref": "#/definitions/componentEvent" }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "componentObject": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "props": {
          "type": "array",
          "items": { "$ref": "#/definitions/componentObjectProp" }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "componentObjectProp": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "enum": ["string"]
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },
    "componentAction": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "componentEvent": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "payload": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
